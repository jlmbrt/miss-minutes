{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "incremental": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",

        "declaration": true,
        "declarationDir": "dist/types",
        "sourceMap": false,

        "strict": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false
    },
    "include": ["src/**/*"],
    "exclude": [""]
}
